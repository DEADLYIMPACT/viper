<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/langLl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_back"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/pixel2"
            android:text="@string/lang_change"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/closeLang"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/close"
            android:elevation="1dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/english"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:background="@drawable/button_back"
                android:fontFamily="@font/pixel2"
                android:text="ENGLISH"
                android:textColor="@color/colorAccentDark"
                android:textSize="20dp" />

            <Button
                android:id="@+id/spanish"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_back"
                android:fontFamily="@font/pixel2"
                android:text="SPANISH español"
                android:textColor="@color/colorAccentDark"
                android:textSize="20dp" />

            <Button
                android:id="@+id/russian"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_back"
                android:fontFamily="@font/pixel2"
                android:text="RUSSIAN русский"
                android:textColor="@color/colorAccentDark"
                android:textSize="20dp" />

            <Button
                android:id="@+id/portuguese"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_back"
                android:fontFamily="@font/pixel2"
                android:text="PORTUGUESE Português"
                android:textColor="@color/colorAccentDark"
                android:textSize="19dp" />

            <Button
                android:id="@+id/french"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_back"
                android:fontFamily="@font/pixel2"
                android:text="FRENCH français"
                android:textColor="@color/colorAccentDark"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
